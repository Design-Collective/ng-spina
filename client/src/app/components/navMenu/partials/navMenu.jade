div.toolbar(layout='row')
    .left-nav(flex='50', layout='row', layout-align='start center')
        // Logo might be here
    .right-nav(flex='50', layout='row', layout-align='end center')
        a(href='#',ng-click='navMenu.toggleMenu()')
            i(ng-class='navMenu.menuClass') menu

.menu-overlay(ng-show='navMenu.isOpen')
    .wrapper
        ul.menu
            li.menu-item(ng-repeat='item in navMenu.menuItems')
                a(ng-href='item.slug')
                    p.title {{ item.title }}
                    p.small-title {{ item.subTitle }}

    .menu-footer
